# Copy this file to .env and fill in your actual values.
# DO NOT COMMIT THE ACTUAL .env FILE TO GIT!

# Server Configuration
SERVER_PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_postgres_user
DB_PASSWORD=your_postgres_password
DB_NAME=todo_db
DB_SSLMODE=disable
TIME_ZONE=Asia/Bangkok

# JWT Configuration
JWT_SECRET=replace_with_a_very_strong_random_secret_key
JWT_EXPIRES_IN_MINUTES=60m

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173

# PGAdmin Configuration (Only used by docker-compose, if using it)
# PGADMIN_DEFAULT_EMAIL=admin@example.com
# PGADMIN_DEFAULT_PASSWORD=admin

# Google Cloud Storage
GCS_BUCKET_NAME=your_gcs_bucket_name
GCS_SERVICE_ACCOUNT_KEY_PATH=your_gcs_service_account_key_path # path to .json file
